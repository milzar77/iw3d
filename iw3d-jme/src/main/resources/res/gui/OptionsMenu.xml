<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.lessvoid.com/nifty-gui" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://raw.githubusercontent.com/void256/nifty-gui/1.4/nifty-core/src/main/resources/nifty.xsd https://raw.githubusercontent.com/void256/nifty-gui/1.4/nifty-core/src/main/resources/nifty.xsd">
    <useStyles filename="nifty-default-styles.xml"/>
    <useControls filename="nifty-default-controls.xml"/>
    <screen id="options" controller="com.blogspot.fravalle.iw3d.jme.simpleapplication.OptionsScreenController">
        <layer id="layerOptions" backgroundColor="#0000" childLayout="vertical">
            <panel id="panel1" height="5%" width="25%" align="right" valign="center" backgroundColor="#ffff" childLayout="center" visibleToMouse="true">
                <interact onClick="backBrowserLocation()"/>
                <effect>
                    <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
                    <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
                    <onHover name="pulsate" scaleFactor="0.008" startColor="#f600" endColor="#ffff" post="true"/>
                </effect>
                <text id="text" font="aurulent-sans-16.fnt" color="#000f" text="Back" align="center" valign="center" />
            </panel>

            <panel id="panel6" height="5%" width="25%" align="right" valign="center" backgroundColor="#ffff" childLayout="center" visibleToMouse="true">
                <interact onClick="surfCircularMatrix()"/>
                <effect>
                    <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
                    <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
                    <onHover name="pulsate" scaleFactor="0.008" startColor="#0390" endColor="#ffff" post="true"/>
                </effect>
                <text id="text5" font="aurulent-sans-16.fnt" color="#000f" text="Apply Circular Matrix" align="center" valign="center" />
            </panel>

            <panel id="panel7" height="5%" width="25%" align="right" valign="center" backgroundColor="#ffff" childLayout="center" visibleToMouse="true">
                <interact onClick="surfQuadMatrix()"/>
                <effect>
                    <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
                    <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
                    <onHover name="pulsate" scaleFactor="0.008" startColor="#0390" endColor="#ffff" post="true"/>
                </effect>
                <text id="text6" font="aurulent-sans-16.fnt" color="#000f" text="Apply Quad Matrix" align="center" valign="center" />
            </panel>

            <panel id="panel8" height="5%" width="25%" align="right" valign="center" backgroundColor="#ffff" childLayout="center" visibleToMouse="true">
                <interact onClick="surfRandomWebMatrix()"/>
                <effect>
                    <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
                    <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
                    <onHover name="pulsate" scaleFactor="0.008" startColor="#0390" endColor="#ffff" post="true"/>
                </effect>
                <text id="text7" font="aurulent-sans-16.fnt" color="#000f" text="Apply Random Web Matrix" align="center" valign="center" />
            </panel>

            <panel id="panelQuit" height="5%" width="25%" align="right" valign="center" backgroundColor="#ffff" childLayout="center" visibleToMouse="true">
                <interact onClick="quit()"/>
                <effect>
                    <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
                    <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
                    <onHover name="pulsate" scaleFactor="0.008" startColor="#f600" endColor="#ffff" post="true"/>
                </effect>
                <text id="text" font="aurulent-sans-16.fnt" color="#000f" text="Quit" align="center" valign="center" />
            </panel>

        </layer>
    </screen>


    <screen id="endOptions">
    </screen>
</nifty>